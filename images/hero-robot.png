<!-- Hero Robot Illustration -->
<svg xmlns="http://www.w3.org/2000/svg" width="1200" height="800" viewBox="0 0 1200 800">
  <defs>
    <linearGradient id="bgGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" stop-color="#0c0c14"/>
      <stop offset="100%" stop-color="#14141e"/>
    </linearGradient>
    <linearGradient id="primaryGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" stop-color="#0cebeb"/>
      <stop offset="100%" stop-color="#20e3b2"/>
    </linearGradient>
    <linearGradient id="spotGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" stop-color="#ffd700"/>
      <stop offset="100%" stop-color="#ff8c00"/>
    </linearGradient>
    <filter id="glow" x="-20%" y="-20%" width="140%" height="140%">
      <feGaussianBlur stdDeviation="5" result="blur"/>
      <feComposite in="SourceGraphic" in2="blur" operator="over"/>
    </filter>
  </defs>
  
  <!-- Background -->
  <rect width="100%" height="100%" fill="url(#bgGradient)"/>
  
  <!-- Circuit pattern background -->
  <g stroke="rgba(255,255,255,0.05)" stroke-width="1" fill="none">
    <!-- Horizontal lines -->
    <line x1="0" y1="100" x2="1200" y2="100"/>
    <line x1="0" y1="200" x2="1200" y2="200"/>
    <line x1="0" y1="300" x2="1200" y2="300"/>
    <line x1="0" y1="400" x2="1200" y2="400"/>
    <line x1="0" y1="500" x2="1200" y2="500"/>
    <line x1="0" y1="600" x2="1200" y2="600"/>
    <line x1="0" y1="700" x2="1200" y2="700"/>
    
    <!-- Vertical lines -->
    <line x1="100" y1="0" x2="100" y2="800"/>
    <line x1="200" y1="0" x2="200" y2="800"/>
    <line x1="300" y1="0" x2="300" y2="800"/>
    <line x1="400" y1="0" x2="400" y2="800"/>
    <line x1="500" y1="0" x2="500" y2="800"/>
    <line x1="600" y1="0" x2="600" y2="800"/>
    <line x1="700" y1="0" x2="700" y2="800"/>
    <line x1="800" y1="0" x2="800" y2="800"/>
    <line x1="900" y1="0" x2="900" y2="800"/>
    <line x1="1000" y1="0" x2="1000" y2="800"/>
    <line x1="1100" y1="0" x2="1100" y2="800"/>
  </g>
  
  <!-- Robot Figures -->
  <g transform="translate(900, 400)">
    <!-- Humanoid Robot -->
    <rect x="-100" y="-200" width="200" height="350" rx="20" ry="20" fill="#222" stroke="url(#primaryGradient)" stroke-width="3" filter="url(#glow)"/>
    <rect x="-75" y="-175" width="150" height="100" rx="10" ry="10" fill="#333" stroke="url(#primaryGradient)" stroke-width="2"/>
    <circle cx="-35" cy="-135" r="15" fill="url(#primaryGradient)" filter="url(#glow)"/>
    <circle cx="35" cy="-135" r="15" fill="url(#primaryGradient)" filter="url(#glow)"/>
    <line x1="-150" y1="-120" x2="-100" y2="-120" stroke="url(#primaryGradient)" stroke-width="20" stroke-linecap="round"/>
    <line x1="150" y1="-120" x2="100" y2="-120" stroke="url(#primaryGradient)" stroke-width="20" stroke-linecap="round"/>
    <line x1="-65" y1="150" x2="-65" y2="250" stroke="#222" stroke-width="30" stroke-linecap="round"/>
    <line x1="65" y1="150" x2="65" y2="250" stroke="#222" stroke-width="30" stroke-linecap="round"/>
    <rect x="-80" y="150" width="30" height="100" rx="5" ry="5" fill="#333" stroke="url(#primaryGradient)" stroke-width="2"/>
    <rect x="50" y="150" width="30" height="100" rx="5" ry="5" fill="#333" stroke="url(#primaryGradient)" stroke-width="2"/>
  </g>
  
  <g transform="translate(550, 450)">
    <!-- Quadruped Robot (Spot-like) -->
    <rect x="-150" y="-50" width="300" height="100" rx="30" ry="30" fill="#222" stroke="url(#spotGradient)" stroke-width="4" filter="url(#glow)"/>
    <rect x="150" y="-30" width="100" height="60" rx="20" ry="20" fill="#333" stroke="url(#spotGradient)" stroke-width="2"/>
    <circle cx="205" cy="-10" r="10" fill="url(#spotGradient)" filter="url(#glow)"/>
    <rect x="-120" y="50" width="20" height="100" rx="5" ry="5" fill="#333" stroke="url(#spotGradient)" stroke-width="2"/>
    <rect x="-20" y="50" width="20" height="100" rx="5" ry="5" fill="#333" stroke="url(#spotGradient)" stroke-width="2"/>
    <rect x="80" y="50" width="20" height="100" rx="5" ry="5" fill="#333" stroke="url(#spotGradient)" stroke-width="2"/>
    <rect x="-120" y="-150" width="20" height="100" rx="5" ry="5" fill="#333" stroke="url(#spotGradient)" stroke-width="2"/>
    <rect x="-20" y="-150" width="20" height="100" rx="5" ry="5" fill="#333" stroke="url(#spotGradient)" stroke-width="2"/>
    <rect x="80" y="-150" width="20" height="100" rx="5" ry="5" fill="#333" stroke="url(#spotGradient)" stroke-width="2"/>
  </g>
  
  <g transform="translate(280, 400)">
    <!-- Industrial Robot Arm -->
    <rect x="-80" y="100" width="160" height="60" rx="10" ry="10" fill="#222" stroke="url(#primaryGradient)" stroke-width="4" filter="url(#glow)"/>
    <rect x="-20" y="-100" width="40" height="200" rx="5" ry="5" fill="#333" stroke="url(#primaryGradient)" stroke-width="2"/>
    <circle cx="0" cy="-100" r="20" fill="#444" stroke="url(#primaryGradient)" stroke-width="2"/>
    <rect x="-100" y="-150" width="200" height="50" rx="5" ry="5" fill="#333" stroke="url(#primaryGradient)" stroke-width="2"/>
    <rect x="100" y="-140" width="150" height="30" rx="5" ry="5" fill="#333" stroke="url(#primaryGradient)" stroke-width="2" transform="rotate(30, 100, -140)"/>
    <circle cx="240" cy="-80" r="20" fill="#444" stroke="url(#primaryGradient)" stroke-width="2"/>
    <rect x="240" y="-70" width="30" height="80" rx="5" ry="5" fill="#333" stroke="url(#primaryGradient)" stroke-width="2" transform="rotate(60, 240, -70)"/>
    <circle cx="270" cy="0" r="15" fill="url(#primaryGradient)" filter="url(#glow)"/>
  </g>
  
  <!-- Particles and Tech Elements -->
  <g fill="url(#primaryGradient)" filter="url(#glow)">
    <circle cx="150" cy="150" r="3"/>
    <circle cx="300" cy="200" r="2"/>
    <circle cx="450" cy="300" r="4"/>
    <circle cx="600" cy="150" r="2"/>
    <circle cx="750" cy="250" r="3"/>
    <circle cx="900" cy="350" r="2"/>
    <circle cx="1050" cy="200" r="3"/>
    <circle cx="200" cy="400" r="2"/>
    <circle cx="350" cy="500" r="3"/>
    <circle cx="500" cy="600" r="2"/>
    <circle cx="650" cy="450" r="4"/>
    <circle cx="800" cy="550" r="2"/>
    <circle cx="950" cy="650" r="3"/>
    <circle cx="1100" cy="500" r="2"/>
  </g>
  
  <!-- Data Flow Lines -->
  <g stroke="url(#primaryGradient)" stroke-width="1" opacity="0.5" filter="url(#glow)">
    <path d="M100,100 C200,150 300,50 400,100" fill="none"/>
    <path d="M500,200 C600,250 700,150 800,200" fill="none"/>
    <path d="M300,300 C400,350 500,250 600,300" fill="none"/>
    <path d="M700,400 C800,450 900,350 1000,400" fill="none"/>
    <path d="M200,500 C300,550 400,450 500,500" fill="none"/>
    <path d="M600,600 C700,650 800,550 900,600" fill="none"/>
  </g>
</svg>